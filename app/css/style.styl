@import 'rupture'
@import "variable/_constant.styl"
@import "variable/_function.styl"

/* -------------- style for sprite --------------*/
@import "icon/sprite.css"

/* -------------- style for font-icon --------------*/
@import "icon/style.css"

/* -------------- style for reset --------------*/
@import "variable/_default.styl"

/* -------------- style for elements --------------*/
@import "variable/_element.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

/* -------------- style basic --------------*/
body
	font-size 14px
	font-family PT Sans
	color white
	overflow-x hidden
	bgi('main-bg.jpg')
	background-size cover
a
	color white
.main-cont
	center(1200px)
	position relative
	width 100%
	padding  0 10px
	+above(1200px)
		width 1200px
.section-main
	+below(768px)
		overflow-y auto
	f()
	fl() 
	overflow hidden
	width 100%
	height 100vh
	position relative
.rows
	+below(lg)
		background-position-x -200px  
	position absolute!important
	bgi('row.png')
	top 0
	left 0
	width 100%
	height 100%
.icon
	font-size 24px
	color white
	flex(mid)
.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -30px
.owl-carousel
	position relative
	.icon
		font-size 64px
.owl-prev
	+below(768px)
		left -5%
	left 1%
.owl-next
	+below(768px)
		right -5%
	right 1%
	
//.fluid 
.fluid__el
	+below(768px)
		width 100%
		fl()
	f()
	border 1px solid purp
	margin-bottom 20px
	br(4px)
	width 60%
.fluid__row
	&:nth-child(2)
		flex(mid)
	&:nth-child(3)
		f()
		justify-content flex-end
	&:nth-child(4)
		flex(mid)
	&:nth-child(6)
		flex(mid)
	&:nth-child(7)
		f()
		justify-content flex-end
.fluid__number 
	text-align center
	font-size 110px
	line-height 90px
	padding 10px 30px 
.fluid__info 
	padding 20px
	background pink-dark 
.fluid__title
	font-size 24px
	font-weight 700
.owl-dots
	width 100%
	flex(mid)
	margin-top 10px
.owl-dot
	round()
	margin 5px
	width 10px
	height 10px
	background white
.owl-dot.active
	background #322f40
	

