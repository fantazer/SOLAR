@import 'rupture'
@import "variable/_constant.styl"
@import "variable/_function.styl"

/* -------------- style for sprite --------------*/
@import "icon/sprite.css"

/* -------------- style for font-icon --------------*/
@import "icon/style.css"

/* -------------- style for reset --------------*/
@import "variable/_default.styl"

/* -------------- style for elements --------------*/
@import "variable/_element.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

/* -------------- style basic --------------*/
body
	font-size 14px
	font-family PT Sans
	color white
	overflow-x hidden
a
	color white
.main-cont
	center(1200px)
	position relative
	width 100%
	+above(1200px)
		width 1200px
.section-main
	width 100%
	height 100vh
	bgi('main-bg.jpg')
	background-size cover
	position relative
	f()
	fl() 
.rows
	+below(lg)
		background-position-x -200px  
	position absolute!important
	bgi('row.png')
	top 0
	left 0
	width 100%
	height 100%
.icon
	font-size 24px
	color white
	flex(mid)

.rows-cont
	position relative
	height 100%
.planet-el
	flex(mid)
	display flex !important
	round()
	up()
	font-size 20px
	position absolute
	height 90px
	width 90px
	background purp
	font-weight 700
.planet-audit
	+below(lg)
		left 165px!important
	left 365px!important
	top 95px!important
.planet-smm
	+below(lg)
		left 380px!important
	left 580px!important
	top 70px!important
.planet-seo
	+below(lg)
		left 380px!important
	left 580px!important
	top 270px!important
.planet-web
	+below(lg)
		left 590px!important
	left 790px!important
	top 240px!important
.section-main__title
	position relative
.planet-wraper
	width 100%
	height 400px 
.planet-title-waper
	width 60%
	position absolute!important
	left initial!important
	right 0px!important
	top -230px !important
	text-align right
	height 100%
.planet-title__el
	font-size 60px
	font-weight 400
	text-transform uppercase
.planet-title__el--small
	font-size 40px
	font-weight 100
	text-transform uppercase
	
//space
.space
	width 100%
	height 100vh
	padding 100px
	background grey 
.planet
	width 40px
	height 40px
	background green
	margin 10px 
/* -------------- style for header --------------*/
@import "include/_header.styl"

/* -------------- style for footer --------------*/
@import "include/_footer.styl"

