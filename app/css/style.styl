@import 'rupture'
@import "variable/_constant.styl"
@import "variable/_function.styl"

/* -------------- style for sprite --------------*/
@import "icon/sprite.css"

/* -------------- style for font-icon --------------*/
@import "icon/style.css"

/* -------------- style for reset --------------*/
@import "variable/_default.styl"

/* -------------- style for elements --------------*/
@import "variable/_element.styl"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

/* -------------- style basic --------------*/
body
	font-size 14px
	font-family PT Sans
	color white
	overflow-x hidden
a
	color white
.main-cont
	center(1200px)
	position relative
	width 100%
	+above(1200px)
		width 1200px
.section-main
	+below(768px)
		overflow-y auto
	f()
	fl() 
	bgi('main-bg.jpg')
	overflow hidden
	width 100%
	height 100vh
	background-size cover
	position relative
.rows
	+below(lg)
		background-position-x -200px  
	position absolute!important
	bgi('row.png')
	top 0
	left 0
	width 100%
	height 100%
.icon
	font-size 24px
	color white
	flex(mid)
.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -30px
.owl-carousel
	position relative
	.icon
		font-size 64px
.owl-prev
	left 2%
.owl-next
	right 2%
	

/* -------------- style for header --------------*/
@import "include/_header.styl"

/* -------------- style for footer --------------*/
@import "include/_footer.styl"

/* -------------- style for b-paralax --------------*/
@import "include/_b-paralax.styl"

