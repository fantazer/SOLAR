.but
	cp()
	up()
	flex(mid)
	tr(all)
	display inline-block
	color white
	margin-bottom 20px
	white-space nowrap
	border-radius 5px
	min-width 160px
	text-align center
.but-mid
	padding 15px 25px
	font-size 16px
.but-lg
	font-size 24px
	font-weight 700
	padding 10px 45px
	
.but-purp
	background purp
	&:hover
		background darken(purp,40)
.but-pink
	background pink
	&:hover
		background darken(pink,10)
	
	
	